<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>
  
  <body>
    <navbar class="navbar navbar-dark bg-dark mb-4">
      <div class="container">
        <h1 class="navbar-brand">FORMULARIO DE PRUEBA MONGODB</h1>
      </div>
    </navbar>
    
    <div class="container">
      <div class="row">
        <div class="col-md-5">
          <div class="container">
            <div class="flexbox ">      <form id="form-afiliado">
              <input id="nombre" type="text" name="nombre" placeholder="Nombre" />
              <input id="apellido" type="text" name="apellido" placeholder="Apellido" />
              <input id="edad" type="text" name="edad" placeholder="Edad" />
              <input id="dni" type="text" name="dni" placeholder="DNI" />
              <div type="button" class="btn btn-primary btn-familiar" onclick="postForm(); agregarFamiliarForm(); ocultarBotones();">AGREGAR FAMILIAR</div>
              <div type="button" class="btn btn-primary btn-familiar" onclick="postForm(); desactivarBotones();">ENVIAR</div>
            </form>
          </div>
        </div>
        
        <div class="col-md-7">
          <ul>
            <% afiliados.forEach( afiliado => { %>
              <li><%= afiliado.nombre; %></li>
              <p>edad: <%= afiliado.edad; %></p>
              <a class="btn btn-primary" href="/editarAfiliado/<%=afiliado._id%>">Editar</a>
              <!-- va al editarAfiliado del routes, no al .ejs, desp el del routes si va al .ejs -->
              <a class="btn btn-danger" href="/eliminarAfiliado/<%=afiliado._id%>">Eliminar</a>
              <% if (!afiliado.done) { %>
                <a class="btn btn-success" href="/toggleDone/<%=afiliado._id%>">Done</a>
                <% } else { %>
                  <a class="btn btn-warning" href="/toggleDone/<%=afiliado._id%>">Undone</a>
                  <% }}); %>
      </ul>
    </div>
  </div>
</container>
<script src="/scripts/scripts.js"></script>
<script src="/scripts/accionesBotones.js"></script>
<script src="/scripts/postForms.js"></script>
</body>
</html>
