    <navbar class="navbar navbar-dark bg-dark mb-4">
      <div class="container">
        <h1 class="navbar-brand">FORMULARIO DE PRUEBA MONGODB</h1>
      </div>
    </navbar>
    
    <div class="container">
      <div class="row">
        <div class="col-md-5">
          <div class="container">
            <div class="flexbox ">      <form id="form-afiliado">
              <div><input id="nombre" type="text" name="nombre" placeholder="Nombre" />
              <div class="ocultar verde" id="nombre-correcto"><i class="bi bi-check-circle-fill"></i></div></div>
              <div class="ocultar rojo" id="nombre-incorrecto"><i class="bi bi-x-square-fill"></i> es incorrecto</div>

              <input id="apellido" type="text" name="apellido" placeholder="Apellido" />
              <div class="ocultar verde" id="apellido-correcto"><i class="bi bi-check-circle-fill"></i></div>
              <div class="ocultar rojo" id="apellido-incorrecto"><i class="bi bi-x-square-fill"></i> es incorrecto</div>

              <input id="edad" type="text" name="edad" placeholder="Edad" />
              <div class="ocultar verde" id="edad-correcto"><i class="bi bi-check-circle-fill"></i></div>
              <div class="ocultar rojo" id="edad-incorrecto"><i class="bi bi-x-square-fill"></i> es incorrecto</div>

              <input id="dni" type="text" name="dni" placeholder="DNI" />
              <div class="ocultar verde" id="dni-correcto"><i class="bi bi-check-circle-fill"></i></div>
              <div class="ocultar rojo" id="dni-incorrecto"><i class="bi bi-x-square-fill"></i> es incorrecto</div>
              <div>
                <input class="ocultar" id="input-empresa" name="empresa" disabled>
                <div id="edit" class="btn ocultar" onclick="editarEmpresa();"><i class="bi bi-pencil"></i></div>
                <input id="buscador-empresa" placeholder="Empresa" onkeyup="checkKeyEmpresas(value);">
                <ul id="resultados-busqueda"></ul>
              </div>
                           
              <div type="button" class="btn btn-primary btn-familiar disabled" id="boton-agregar-familiar" onclick="agregarFamiliarForm(); ocultarBotones(); desactivarBotonesNavegacion()">AGREGAR FAMILIAR</div>
              <div type="button" class="btn btn-primary btn-familiar" id="boton-submit">ENVIAR</div>
            </form>
            <a href="/formAgregarAfiliado"><div class="btn btn-secondary ocultar" id="boton-otro-afiliado">AGREGAR OTRO AFILIADO</div></a>
            <a id="link-nuevo-afiliado"><div class="btn btn-success ocultar" id="boton-ficha">FICHA</div></a>
          </div>
        </div>
        

</container>
