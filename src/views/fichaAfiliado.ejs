<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=afiliado.nombre%> <%=afiliado.apellido%></title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
        crossorigin="anonymous"
        />
        <link href="/css/styles.css" rel="stylesheet" type="text/css" />
</head>
<body>

    
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <form class="form mt-3" method="POST" action="/editar/afiliado/<%=afiliado._id%>">
                    <input class="disabled" placeholder="<%=afiliado.nombre%>" name="nombre">
                    <br>
                    <input class="disabled" placeholder="<%=afiliado.apellido%>" name="apellido">
                    <br>
                    <input class="disabled" placeholder="<%=afiliado.edad%>" name="edad"> 
                    <br>
                    <button type="submit" class="btn btn-primary ocultar" id="guardar-cambios" onclick="return confirmar('guardar cambios');">Guardar cambios</button>
                </form>
                <div class="mt-2 mb-5"><button class="btn btn-secondary" onclick="toggleFamiliares();">Familiares</button>
                    <button class="btn btn-primary" onclick="ponerValues(); editarAfiliado(); mostrarBoton();">Editar</button>
                    <button class="btn btn-danger" id ="<%=afiliado._id%>" onclick="checkConfirm('eliminar', 'afiliado', id);">Eliminar</button>
                </div>
                
                
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col d-flex justify-content-center">

                <div class="ocultar text-center " id="familiares">
                    <table class="table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Edad</th>
                            
                        </tr>
                        <tbody>
                            <% familiares.map(f => { %>     
                                <tr>
                                    <form method="POST" action="/editar/familiar/<%=f._id%>">
                                        <td><input type="text" data-familiar="<%=f._id%>" class="disabledFamiliar" name="nombre" placeholder="<%=f.nombre%>"></td>
                                        <td><input type="text" data-familiar="<%=f._id%>" class="disabledFamiliar" name="apellido" placeholder="<%=f.apellido%>"></td>
                                        <td><input type="text" data-familiar="<%=f._id%>" class="disabledFamiliar" name="edad" placeholder="<%=f.edad%>"></td>
                                        <td><div class="btn btn-primary" data-familiar="<%=f._id%>" id="<%=f._id%>" onclick="ponerValuesFamiliar(); editarFamiliar(this.getAttribute('data-familiar')); mostrarBotonFamiliar(id);">Editar</div></td>
                                        <td><div class="btn btn-danger" onclick="checkConfirm('eliminar', 'familiar', id)">Eliminar</div></td>
                                        <td><button type="submit" class="btn btn-primary ocultar" id="guardar-cambios-<%=f._id%>" onclick="return confirmar('guardar cambios');">Guardar cambios</button></td>
                                    </form>
                                </tr>
                                <% }) %>
                        </tbody>
                    </thead> 
                    
                    </table>
                </div>

            </div>
        </div>
    </div>
    

    <script src="/scripts/checkConfirm.js"></script>
    <script src="/scripts/familiaresAfiliado.js"></script>
</body>
</html>